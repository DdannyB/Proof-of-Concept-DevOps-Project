        ul li ul {
            background: white;
            visibility: hidden;
            opacity: 0;
            min-width: 5rem;
            position: absolute;
            transition: all 0.5s ease;
            margin-top: 1rem;
            left: 0;
            display: none;
        }

            ul li:hover > ul,
            ul li:focus-within > ul,
            ul li ul:hover,
            ul li ul:focus {
                background-color: #65AAF0;
                visibility: visible;
                opacity: 1;
                display: block;
            }

            ul li ul li {
