@model IEnumerable<DevOpsProject.Models.DataBasePerson>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_layouttemplate.cshtml";
}


<div class="services">
    <div class="container">
        <div class="col-md-10 wow fadeInDown" data-wow-duration="1000ms" data-wow-delay="300ms">
            <h2>Lijst van personen</h2>
            <p>
                <a asp-action="Create" class="btn btn-primary btn-lg">Create new person</a>
            </p>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                <p>@Html.DisplayNameFor(model => model.Name)</p>
                            </th>
                            <th>
                                <p>@Html.DisplayNameFor(model => model.Age)</p>
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <p>@Html.DisplayFor(modelItem => item.Id)</p>
                                </td>
                                <td>
                                    <p>@Html.DisplayFor(modelItem => item.Name)</p>
                                </td>
                                <td>
                                    <p>@Html.DisplayFor(modelItem => item.Age)</p>
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
        </div>
    </div>
</div>

